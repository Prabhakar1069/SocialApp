<div class="container">   
  <%= form_for @post, url: {action: :create} do |f| %>   
      <div>   
        <h3>Add a Post</h3>   
      </div>   
      <div>   
        <p>   
            
        <div>   
            <label>Post</label>   
              <%= f.text_field :content %>   
        </div>   
  
         
         </p>   
      </div>   
      <div>   
         
        <%= f.submit 'Create Post' %>   
      </div>   
  <% end %>   
</div>  
